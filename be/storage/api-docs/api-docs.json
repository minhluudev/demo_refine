    "components": {
        "schemas": {
            "CategoryRequest": {
                "required": [
                    "title"
                ],
                "properties": {
                    "title": {
                        "description": "required:Tên danh mục là bắt buộc.|max: Tên danh mục không vượt quá 255 ký tự.",
                        "type": "string",
                        "maxLength": 255,
                        "example": "Điện thoại"
                    },
                    "description": {
                        "description": "Mô tả ngắn cho danh mục (không bắt buộc).",
                        "type": "string",
                        "example": "Danh mục sản phẩm công nghệ",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "PostRequest": {
                "required": [
                    "title",
                    "category_id"
                ],
                "properties": {
                    "title": {
                        "description": "Tiêu đề bài viết. Bắt buộc, tối đa 255 ký tự.",
                        "type": "string",
                        "maxLength": 255,
                        "example": "Bài viết về công nghệ"
                    },
                    "content": {
                        "description": "Nội dung bài viết (không bắt buộc).",
                        "type": "string",
                        "example": "Nội dung chi tiết của bài viết.",
                        "nullable": true
                    },
                    "category_id": {
                        "description": "ID danh mục mà bài viết thuộc về. Bắt buộc, phải tồn tại trong bảng categories.",
                        "type": "integer",
                        "example": 1
                    },
                    "tags": {
                        "description": "Danh sách các thẻ (tags) — có thể bỏ trống, mỗi thẻ phải là chuỗi có ít nhất 2 ký tự.",
                        "type": "array",
                        "items": {
                            "type": "string",
                            "minLength": 2,
                            "example": "laravel"
                        },
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "Category": {
                "title": "Category",
                "required": [
                    "title"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "type": "string",
                        "example": "Điện thoại"
                    },
                    "description": {
                        "type": "string",
                        "example": "Các loại điện thoại cao cấp"
                    },
                    "created_at": {
                        "type": "string",
                        "example": "2025-10-24 09:30:00"
                    },
                    "updated_at": {
                        "type": "string",
                        "example": "2025-10-24 09:35:00"
                    }
                },
                "type": "object"
            },
            "Post": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "type": "string",
                        "example": "Hello World"
                    },
                    "content": {
                        "type": "string",
                        "example": "This is a test post",
                        "nullable": true
                    },
                    "category_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "tags": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "example": "laravel"
                        },
                        "nullable": true
                    },
                    "category": {
                        "$ref": "#/components/schemas/Category"
                    }
                },
                "type": "object"
            },
            "PaginationLinks": {
                "properties": {
                    "first": {
                        "type": "string",
                        "example": "http://localhost:8000/api/categories?page=1"
                    },
                    "last": {
                        "type": "string",
                        "example": "http://localhost:8000/api/categories?page=5"
                    },
                    "prev": {
                        "type": "string",
                        "example": null,
                        "nullable": true
                    },
                    "next": {
                        "type": "string",
                        "example": "http://localhost:8000/api/categories?page=2",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "PaginationMeta": {
                "properties": {
                    "current_page": {
                        "type": "integer",
                        "example": 1
                    },
                    "from": {
                        "type": "integer",
                        "example": 1
                    },
                    "last_page": {
                        "type": "integer",
                        "example": 5
                    },
                    "path": {
                        "type": "string",
                        "example": "http://localhost:8000/api/categories"
                    },
                    "per_page": {
                        "type": "integer",
                        "example": 15
                    },
                    "to": {
                        "type": "integer",
                        "example": 15
                    },
                    "total": {
                        "type": "integer",
                        "example": 50
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
